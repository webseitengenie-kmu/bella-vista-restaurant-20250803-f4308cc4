<!-- Webseitengenie Editor Support -->
<script>
(function() {
  // Only activate in editor mode
  if (!window.location.search.includes('webseitengenie_editor=true')) return;
  
  // Store original content
  const originalContent = new Map();
  
  // Listen for editor messages
  window.addEventListener('message', function(event) {
    if (event.source !== window.parent) return;
    
    const { type, elementId, content } = event.data;
    
    if (type === 'update-preview') {
      const element = document.querySelector('[data-editable="' + elementId + '"]');
      if (!element) return;
      
      // Store original
      if (!originalContent.has(elementId)) {
        originalContent.set(elementId, element.innerHTML);
      }
      
      // Update with animation
      element.style.transition = 'all 0.3s ease';
      element.innerHTML = content;
      element.style.backgroundColor = '#fef3c7';
      
      setTimeout(() => {
        element.style.backgroundColor = '';
      }, 300);
    }
    
    if (type === 'restore-original') {
      originalContent.forEach((content, id) => {
        const el = document.querySelector('[data-editable="' + id + '"]');
        if (el) el.innerHTML = content;
      });
    }
  });
  
  // Signal ready
  window.parent.postMessage({ type: 'preview-ready' }, '*');
})();
</script>
</body>
